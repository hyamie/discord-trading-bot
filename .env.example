# ===========================================
# FASTAPI TRADING BOT - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git!

# -------------------
# Application Settings
# -------------------
PORT=8000
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO

# -------------------
# Schwab API (Required)
# -------------------
SCHWAB_API_KEY=your_schwab_api_key_here
SCHWAB_API_SECRET=your_schwab_api_secret_here
SCHWAB_REDIRECT_URI=https://localhost:8080/callback
SCHWAB_BASE_URL=https://api.schwab.com

# -------------------
# Database (Supabase PostgreSQL for Production)
# -------------------
# Local SQLite (Development)
DATABASE_PATH=./data/trading_bot.db

# Supabase (Production - uncomment and use instead of SQLite)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_KEY=your_supabase_anon_key
# SUPABASE_SERVICE_KEY=your_supabase_service_role_key
# DATABASE_URL=postgresql://postgres:[password]@db.[project].supabase.co:5432/postgres

# -------------------
# News APIs (Optional)
# -------------------
FINNHUB_API_KEY=your_finnhub_key_here
NEWSAPI_KEY=your_newsapi_key_here

# -------------------
# LLM for Rationale Generation (Choose One)
# -------------------
# Anthropic Claude (Recommended)
ANTHROPIC_API_KEY=your_anthropic_key_here
LLM_MODEL=claude-3-5-sonnet-20241022

# OpenAI GPT (Alternative)
# OPENAI_API_KEY=your_openai_key_here
# LLM_MODEL=gpt-4o

LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=200

# -------------------
# Backup Data Sources (Optional)
# -------------------
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# -------------------
# Caching & Rate Limiting
# -------------------
CACHE_TTL_SECONDS=60
API_RATE_LIMIT_PER_MIN=120
MAX_CONCURRENT_REQUESTS=5
RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=5

# -------------------
# Trading Parameters
# -------------------
MAX_RISK_PER_TRADE_PCT=1.0
MAX_TOTAL_EXPOSURE_PCT=20.0
DEFAULT_RISK_REWARD_RATIO=2.0
VOLUME_CONFIRMATION_THRESHOLD=1.5
SLOPE_FILTER_THRESHOLD=0.1

# -------------------
# Discord Integration (n8n will handle)
# -------------------
# Not needed in FastAPI service - n8n sends webhooks
# DISCORD_BOT_TOKEN=not_required_for_api
# DISCORD_CHANNEL_ID=not_required_for_api

# -------------------
# Railway Deployment (Auto-populated by Railway)
# -------------------
# PORT=8000  # Railway provides this
# RAILWAY_ENVIRONMENT=production  # Railway provides this
